{
  "name": "authenticator-client",
  "version": "1.0.0",
  "description": "",
  "main": "index.tsx",
  "scripts": {
    "test": "jest",
    "test:dev": "jest -o --watch",
    "lint": "eslint --ext .ts,.tsx src",
    "start": "webpack-dev-server --config ./webpack.config.dev.js --hot --https --history-api-fallback --progress --mode development",
    "config:dev": "cp ./src/config/development.ts ./src/config/local.ts",
    "config:stage": "echo \"Staging configuration not enabled\" && exit 1",
    "config:prod": "echo \"Production configuration not enabled\" && exit 1"
  },
  "author": "Francis Mitra",
  "license": "MIT",
  "dependencies": {
    "preact": "^8.4.2",
    "preact-redux": "^2.0.3",
    "preact-router": "^2.6.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "store2": "^2.7.1"
  },
  "devDependencies": {
    "@types/fetch-mock": "^7.3.0",
    "@types/jest": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-react": "^7.13.0",
    "fetch-mock": "^7.3.3",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.8.0",
    "node-fetch": "^2.6.0",
    "preact-render-spy": "^1.3.0",
    "react-test-renderer": "^16.8.6",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.5",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "!**/dist/**",
      "src/**/*.{ts,js,tsx,jsx}"
    ],
    "moduleNameMapper": {
      "^@authenticator/(.*)": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "jsx",
      "json",
      "node"
    ]
  }
}
